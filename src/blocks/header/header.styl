.header
  border-bottom .5px solid #ccc
  &__container
    display flex
    flex-wrap wrap
    align-items center
    margin-x -(basePadding/3*5)
  &__item
    padding 15px (basePadding/3*5)
    &--service
      margin-left auto
    &--menu
      margin-x auto
  &__top
    background-color #1E1603
  &__bottom
    & ^[-1]__item
      padding-y .5rem
